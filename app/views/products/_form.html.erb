<%= form_for(@product) do |f| %>

  <!-- Product form render on Product new page -->
  <div class="field">
    <%= f.label :name%><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description%><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price_in_centts%><br />
    <%= f.number_field :price_in_centts %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
